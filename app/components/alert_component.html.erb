<div data-controller="reveal">
  <div data-reveal-target="item" class="<%= @bg %>">
    <div class="px-3 py-3 mx-auto max-w-3xl sm:px-6 lg:px-8">
      <div class="flex flex-wrap items-center justify-between">
        <div class="flex-shrink-0 order-2 sm:order-3 sm:ml-3">
          <button data-action="click->reveal#hide" type="button" class="mr-1 flex p-2 rounded-md hover:opacity-100 opacity-70 focus:outline-none focus:ring-2 focus:ring-white sm:-mr-2">
            <span class="sr-only">Dismiss</span>
            <!-- Heroicon name: outline/x -->
            <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div class="flex items-center flex-1">
          <span class="p-2 rounded-lg backdrop-brightness-90">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="h-5 w-5 opacity-90 flex-shrink-0" viewBox="0 0 16 16">
              <% case @type %>
              <% when 'notice' %>
              <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
              <% when 'alert' %>
              <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
            <% else %>
              <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
            <% end %>
          </svg>
        </span>
        <div class="ml-3 font-medium text-lg">
          <span class="hidden md:inline">
            <h4 class="sr-only"><%= @title %></h4>
            <p class="leading-normal"><%= @message %></p>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>
