<% @book.links.each do |link| %>
  <%= link_to(link_path(link), target: '_blank', class: "button bg-cta border-cta-900 hover:text-cta-900 text-cta-100 hover:bg-cta-300") do %>
    <div class="xml-4 my-0 flex items-start flex-col">
      <span class='text-sm opacity-[0.70] tracking-tighter'>Available on</span>
      <span class='text-lg leading-none tracking-wide font-display'><%= link.bookstore %></span>
    </div>
  <% end %>
<% end %>
