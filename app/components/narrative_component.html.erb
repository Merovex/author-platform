<%= turbo_frame_tag @id do %>
  <article class='relative mt-6 mb-8 flex'>
    <aside class='w-20 flex-none hidden md:block'>
      <%= user_avatar_image(@object.user, 45) if @object.user %>
    </aside>
    <div class='border rounded-md border-gray-200 dark:border-gray-700 flex-1'>
      <% if @object.user %>
        <header class='flex align-middle w-full bg-gray-200 dark:bg-gray-700 px-2 py-2 rounded-t-sm text-sm md:text-base'>
          <h3 class='flex-1 flex'>
            <span class='mr-2 inline-block md:hidden flex-none'><%= user_avatar_image(@object.user, 20) if @object.user %></span>
            <span class='font-semibold'><%= @object.user %>&nbsp;</span>
            <%= @verb %>
            on
            <%= local_relative_time(@datetime) if @object.id %>
          </h3>
          <div class='flex-none w-40'>
            <% if @object.id %>
              <%= render OptionMenuComponent.new(object: @object) do %>
              <% end %>
            <% end %>
          </div>
        </header>
      <% end %>
      <section class='py-4 px-2'>
        <%= content %>
      </section>
    </div>
  </article>
<% end %>
