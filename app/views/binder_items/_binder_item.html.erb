<div id="<%= dom_id binder_item %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= binder_item.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Ancestry:</strong>
    <%= binder_item.ancestry %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Synopsis:</strong>
    <%= binder_item.synopsis %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Project:</strong>
    <%= binder_item.project_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this binder item", binder_item, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this binder item', edit_binder_item_path(binder_item), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
