<div id="<%= dom_id binder %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Project:</strong>
    <%= binder.project_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Type:</strong>
    <%= binder.type %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this binder", binder, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this binder', edit_binder_path(binder), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
