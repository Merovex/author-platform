<div class="main">

<% if can? :admin, Book %>
    <div class="flex mt-5 lg:mt-0 lg:ml-4h">
      <%= link_to 'New Series', new_series_path, class: 'action' %>
    </div>
    <% @series.each do |serial| %>
      <section class="p-4 card">
        <h2 class="h2"><%= serial.title %></h2>
        <%= link_to 'New Book', new_series_book_path(serial), class: 'action mb-4' %>
        <ul data-controller="drag" data-sortable-resource-name-value="book" data-drag-url="/book/:id/move">
          <% serial.books.each do |book|%>
          <li data-id="<%= dom_id(book) %>" data-sortable-update-url="<%= book_path(book) %>">
            <%= bi_icon('list') %>
            <%= book.title %><%= book.position %>
          </li>
          <%end%>
        </ul>
      </section>
    <% end %>
<%end%>
</div>
