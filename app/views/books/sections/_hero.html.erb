<section id='hero' class='z-0' >
  <div class="relative flex items-center content-center justify-center pt-16 pb-32" style="min-height:75vh">
    <div id='underlay-1' class="absolute top-0 z-0 w-full h-full bg-center bg-cover"
         style="background-image:url(&#x27;<%=book_cover_background_image(@book)%>&#x27;)">
      <div id='underlay-2' class="absolute top-0 z-10 w-full h-full bg-center bg-cover opacity-25" 
         style="background-image:url(&#x27;<%= image_url('backgrounds/tin-background.jpeg') %>&#x27;)"></div>
      <span id="overlay" class="absolute w-full h-full opacity-90 dark:opacity-0"
         style="background: #888888 <%#=  complementary(@book.cover_color) %>; "></span>
    </div>
    <div class="container relative max-w-screen-lg p-4 mx-auto rounded-lg bg-gray-50/70 md:text-2xl backdrop-filter backdrop-blur-md md:flex space-x-4">
      <div class='w-full md:w-1/3'><%= book_cover_image(@book, class: 'h-320 w-200') %></div>
      <div class='w-full md:w-2/3 flex flex-col'>
        <%= headline(@book) %>
        <div class='flex-1'><%= @book.synopsis %></div>
        <aside>
          <%= render CtaButtonComponent.new(book: @book) %>
        </aside>
      </div>
    </div>
  </section>
