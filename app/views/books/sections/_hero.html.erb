
<%- comp = complementary(@book.cover_color) %>
<section id='hero' >
  <div class="relative flex items-center content-center justify-center pt-16 pb-32" style="min-height:75vh">
    <div id='underlay-1' class="absolute top-0 z-0 w-full h-full bg-center bg-cover"
         style="background-image:url(&#x27;<%=hero_background(@book)%>&#x27;)">
    <div id='underlay-2' class="absolute top-0 z-10 w-full h-full bg-center bg-cover opacity-25" 
         style="background-image:url(&#x27;<%= image_url('backgrounds/tin-background.jpeg') %>&#x27;)"></div>
    <span id="overlay"   class="absolute w-full h-full opacity-75 dark:opacity-0"
         style="background: <%= comp %>; "></span>
    <span id="overlay"   class="absolute w-full h-full opacity-0 dark:opacity-90 dark:bg-gray-900 "></span>
  </div>
  <div class="container relative max-w-screen-lg p-4 mx-auto rounded-lg md:text-2xl backdrop-filter backdrop-blur-md">
    <%= render layout: 'books/layout', locals: {book: @book} do %>
      <h1 class="my-6 text-4xl text-center lg:text-6xl <%= text_color(@book.cover_color) %> font-display">
        <%= @book.title %>
      </h1>
      <div class="font-serif prose max-w-prose lg:prose-xl <%= text_color(@book.cover_color) %> font-bold text-center opacity-100">
        <%= @book.synopsis %>
      </div>
      <aside class='mt-8 text-center'>
        <%= render 'components/buy-cta', locals: {book: @book} %>
      </aside>
    <% end %>
  </div>
</section>
