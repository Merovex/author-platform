<% if @book.series.books.count > 0 %>
<section id='other-titles' class='p-4'>
  <div class="main">
    <%= h2("Books in #{@book.series.title} series") %>
  </div>
  <div class='overflow-x-scroll whitespace-nowrap flex justify-center <%= zebra() %>'>
    <% get_books_in_series(@book.series).each do |book| %>
      <% next unless book.is_released?  %>
      <div class='inline-block m-3'>
        <%= link_to book do %>
          <%= render 'books/cover', book: book %>
        <% end %>
        <h3 class='my-2 text-xl text-center'><em><%= book.title %></em></h3>
      </div>
    <% end %>
  </div>
</section>
<%end%>
