<section id='testimonials' class="py-4 <%= zebra() %>">
  <div class="<%=t('css_article')%> ">
  <%= h2("Praise for <em>#{@book}</em>".html_safe) %>
  <%= link_to "Add Praise", new_book_praise_path(@book), class: t('css_link') %>
  <% @book.praises.each do |p| %>
    <div class="<%=t('css_prose')%>">
    <%= p.comment %>
    <hr>
    </div>
  <%end%>
  <aside class='py-8 mt-4 text-center'>
  <%= render 'components/buy-cta', locals: {book: @book} %>
  </aside>
  </div>
</section>
