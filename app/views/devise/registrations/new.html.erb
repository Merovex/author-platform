<%= render layout: 'components/user-panel' do %>

<%= panel_headline('Sign Up') %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= invisible_captcha %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input rounded w-full" %>
  </div>

  <div class="my-8">
    <%= f.submit "Sign up", class: button_css('blue') %>
  </div>
<% end %>
<% end %>
