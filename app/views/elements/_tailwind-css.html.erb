
.card {
  @apply px-8 py-4 my-8 border rounded-lg shadow-lg;
}
.card time {
  @apply text-center text-gray-500 dark:text-gray-300 opacity-75 block;
}
.card h2 {
  @apply font-display text-2xl md:text-3xl text-black dark:text-white text-center mt-2 mb-4;
}
main > article, .main {
  @apply max-w-2xl mx-4 md:mx-auto my-16;
}
a.action {
  @apply border-solid border inline-block p-2 mx-1 text-sm uppercase font-sans border-blue-200 rounded-md dark:border-blue-400 hover:bg-blue-500 dark:hover:bg-blue-400 dark:text-white;
}
