<%= form_with(model: feature, class: "contents") do |form| %>
  <%= render FormErrorsComponent.new(object: feature)%>
  <div class="my-8">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-8">
    <%= form.label :summary %>
    <%= form.text_area :summary, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-8">
    <%= form.label :content, class: 'h3' %>
    <%= form.rich_text_area :content %>
  </div>

  <div class="field">
    <%= form.label :released_on %>
    <%= form.text_field :released_on, 
          placeholder: "Select Date...",
          class: 'flatpickr flatpickr-input active form-input rounded',
          data: {
            controller: "flatpickr",
            flatpickr_date_format: "Y-m-d",
            flatpickr_enable_time: false,
            flatpickr_min_date: Time.zone.now
          }
    %>
  </div>

  <div class="inline">
    <%= render SubmitButtonComponent.new(form: form)%>
  </div>
<% end %>
