<!DOCTYPE html>
<html>
  <head>
    <title>Author Platform</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "merovex-fonts", "data-turbo-track": "reload" %>
    <%# stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <%= javascript_importmap_tags %>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.5.1/dist/chart.min.js"></script>
    <script src="https://cdn-tailwindcss.vercel.app/?plugins=forms,typography"></script>
    <script>
      <%= render "elements/tailwind-config" %>
    </script>
    <style type="text/tailwindcss">
      <%= render "elements/tailwind-css" %>
    </style>
  </head>

  <body class='dark:bg-gray-700 dark:text-gray-200'>
    <%= render 'components/navbar' %>
    <main class="min-h-screen">
      <%= yield %>
    </main>
    <%= render 'components/footer' %>
  </body>
</html>
