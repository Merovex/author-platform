<%= form_with(model: page) do |form| %>
  <%= render FormErrorsComponent.new(object: page)%>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :slug %>
    <%= form.text_field :slug %>
  </div>
  <div class="mt-8">
    <%= form.rich_text_area :content %>
  </div>
  <div class="actions">
    <%= render SubmitButtonComponent.new(form: form) %>
    
  </div>
<% end %>
