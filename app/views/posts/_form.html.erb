<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-input rounded block w-full' %>
  </div>

  <div class="mt-8">
    <%= form.rich_text_area :content %>
  </div>

  <div class="field">
    <%= form.label :published_at %>
    <%= form.text_field :published_at, 
          placeholder: "Select Date...",
          xreadonly: 'readonly',
          class: 'flatpickr flatpickr-input active form-input',
          data: {
            controller: "flatpickr",
            flatpickr_date_format: "Y-m-d",
            flatpickr_min_date: Time.zone.now
          }
    %>
  </div>

  <div class="actions">
    <%= form.submit "Save Changes", class: button_css('blue') %>
    <%= link_to "Never Mind", :back, class: inverse_button_css('red')%>
  </div>
<% end %>
