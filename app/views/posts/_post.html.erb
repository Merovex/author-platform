<article class="card">
  <time datetime="<%= post.published_at %>">
    <%= post.published_at.strftime('%d %B %Y') %>
  </time>
  <h2><%= link_to(post.title.titlecase, post)%></h2>
  <p class='prose font-serif lg:prose-xl dark:text-gray-300 dark:prose-dark'>
    <%= post.content.to_plain_text.truncate(256) %>
  </p>
  <p class='my-4 text-center'>
    <%= link_to 'Read More', post, class: button_css('violet'), aria: {label: "#{post.class}: #{post.title}, on #{post.published_at.strftime('%d %B %Y')}" } %>
  </p>
</article>