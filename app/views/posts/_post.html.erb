<div id="<%= dom_id post %>" class="scaffold_record">
  <p>
    <strong>Slug:</strong>
    <%= post.slug %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>User:</strong>
    <%= post.user_id %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Published on:</strong>
    <%= post.published_at %>
  </p>

  <p>
    <%= link_to "Show this post", post %>
  </p>
</div>
