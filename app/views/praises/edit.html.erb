<%= turbo_frame_tag dom_id @praise do %>
  <%= form_with(model: @praise, url: [@book, @praise]) do |form| %>
    <div class="my-8">
      <%= form.rich_text_area :comment %>
    </div>

    <div class="actions">
      <%= render SubmitButtonComponent.new(form: form) %>
      <%= link_to("Discard changes", book_path(@book, inline: true)) %>
    </div>
  <% end %>
<% end %>
