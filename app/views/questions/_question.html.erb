<article id="<%= dom_id question %>" class="card relative h-60">
  <%= h2(question) %>
  <%= render MembershipListComponent.new(memberships: question.memberships) %>
  <aside class='my-2 text-center'>
    <%= tag.span 'Read More', class: button_css('brand') %>
  </aside>
  <%= link_to "", question_path(question), class: 'coverall' %>
</article>
