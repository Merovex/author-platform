<%= form_with(model: todolist) do |form| %>
  <%= render FormErrorsComponent.new(object: todolist)%>
  <%= form.hidden_field :todolistable_id %>
  <%= form.hidden_field :todolistable_type %>
  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="mt-8">
    <%= form.rich_text_area :content %>
  </div>

  <div class="actions">
    <%= render SubmitButtonComponent.new(form: form) %>
    
  </div>
<% end %>
