<article class='relative p-0 my-8 overflow-hidden'>
<% if can? :admin, Todo %>
  <%= render OptionMenuComponent.new() do %>
    <%= link_to 'Edit todo', edit_todo_path(@todo), data: { turbo_frame: "todo_details" } %>
    <%= trash_link_to(@todo,'Put in the trash') %>
  <% end %>
<% end %>
<div class="mx-8">
  <section>
  <%= turbo_frame_tag "todo_details" do %>
    <%= render partial: "todo_details" %>
  <% end %>
  </section>
</div>

</article>
